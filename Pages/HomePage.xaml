<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeShop.Pages.HomePage"
             Title="HomePage">
    <ScrollView>
        <VerticalStackLayout
            VerticalOptions="Center">

            <Image
                Source="cafe_logo.png"
                SemanticProperties.Description="Eco Cafteria"
                HeightRequest="200"
                HorizontalOptions="Center" />


            <Label
                Text="Welcome to Eco Cafeteria"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="For menu use the side bar menu, to view the basket used the one on the bottom."
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>